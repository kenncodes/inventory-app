    <div style="padding:10px; display:flex; justify-content: space-between;">
          <h3>Products</h3>
          <button type="button" data-toggle="modal" data-target="#addProductModal">Add Product</button>
        </div>
     <!-- Modal Start -->
     <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="addProduct" method="POST">
              <div id="form-card">
                <div>
                  <label for="name">Product Name</label><br />
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    placeholder="Product Name"
                    required
                    minlength="5"
                  />
                </div>
        
            
                <div>
                  <label for="price">Product Price</label><br />
                  <input 
                  type="number" 
                  step="0.01" 
                  class="form-control" 
                  id="price" 
                  name="price" 
                  placeholder="Product Cost" 
                  required 
                  min="0"/>
                </div>
             
                <div>
                  <label for="quantity">Product Quantity</label><br />
                  <input
                    type="number"
                    id="quantity"
                    class="form-control"
                    name="quantity"
                    placeholder="Product Quantity"
                    required
                    min="0"
                   
                  />
                </div>
                
                <div>
                 <div  style="display:flex;"> 
                  <label for="category-select">Category</label>
                <select style="float:left;margin-left:10px;" name="category" id="category-select">
                    <option value="plushies">Plushies</option>
                  </select>
                </div>
                </div>
              </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button id="addProductButton"  class="btn btn-primary">Save New Product</button>
          </div>
        </form>
        </div>
      </div>
    </div>

     <!-- Modal Complete-->
        <table class="table">
          <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Total</th>
              </tr>
          </thead>
          <tbody>
          <% for(var i=0; i< products.length; i++) { %>
            <tr class="productRow" id=<%= products[i]._id %>>
              <td> <%= products[i].name %></td>
              <td> $<%= products[i].price %></td>
              <td> <%= products[i].quantity %> </td>
              <td> $<%= products[i].quantity * products[i].price %> </td>
            </tr>

          <% } %>
          </tbody>
        </table>
    </div>
